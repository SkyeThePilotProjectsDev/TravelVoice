rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if request.auth.uid == document;
    }

    match /trip/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.ownedBy == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /tripLog/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if resource.data.ownedBy == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.ownedBy == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /invitations/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /invitations/{parent}/tripInvitation/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /{path=**}/tripInvitation/{document} {
      allow read: if true;
    }

  }
}
